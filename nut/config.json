{
  "name": "Network UPS Tools",
  "version": "1.0.4",
  "slug": "nut",
  "description": "Manage battery backup (UPS) devices",
  "url": "https://github.com/hassio-addons/addon-nut",
  "startup": "system",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "homeassistant_api": true,
  "ports": {
    "3493/tcp": 3493
  },
  "ports_description": {
    "3493/tcp": "Network UPS Tools"
  },
  "devices": [
    "/dev/bus/usb:/dev/bus/usb:rwm"
  ],
  "map": [
    "config:rw"
  ],
  "stdin": true,
  "options": {
    "users": [
      {
        "username": "",
        "password": "",
        "instcmds": ["all"],
        "actions": []
      }
    ],
    "devices": [ 
      { 
        "name": "", 
        "driver": "", 
        "port": "", 
        "desc": "",
        "runtime1": 450, 
        "runtime2": 940,
        "config": []
      }
    ],
    "upsd": [
      "LISTEN 0.0.0.0"
    ],
    "nut": {
      "mode": "netserver",
      "poweroff_wait": "5s"
    }
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?",
    "users": [
      {
        "username": "str",
        "password": "str",
        "instcmds": ["str"],
        "actions": ["str"],
        "upsmon": "match(^(master|slave)$)?"
      }
    ],
    "devices": [
      { 
        "name": "str", 
        "driver": "str", 
        "port": "str", 
        "desc":"str",
        "runtime1": "int",
        "runtime2": "int",
        "battery_voltage_high": "float?", 
        "battery_voltage_low": "float?", 
        "charge_time": "int?",
        "idle_load": "float?",
        "config": ["str"] 
      }
    ],
    "upsd": ["str"],
    "nut": {
      "mode": "match(^(none|standalone|netserver|netclient)$)",
      "poweroff_wait": "match(^[0-9]+(s|m|h|d)$)"
    },
    "i_like_to_be_pwned": "bool?",
    "leave_front_door_open": "bool?"
  }
}
